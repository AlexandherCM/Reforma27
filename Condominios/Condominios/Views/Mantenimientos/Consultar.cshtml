@model ICollection<Condominios.Models.Entities.MtoProgramado>
@inject Condominios.Data.Interfaces.IEpoch service

@{
    ViewData["Title"] = "Manteniminetos";
}

@* Despegable 1 *@

<aside class="row">

    <article class="col-12 col-lg-3  border-R rounded-3 text-dark" id="form">

        <section class="row text-center text-dark" style="background: #fff;">

            <h3 class="p-1 ">
                <span class="color-R">E</span>ditar equipo <img src="~/images/down.svg"
                                                                alt="down" class="down" id="down">
                <img src="~/images/up.svg" class="down d-none" alt="up" id="up">
            </h3>

            <div class="text-light text-center " id="form-body">

                <h3 class="contorno bg-R mt-3 mx-auto p-3">Editar equipos</h3>

                @*FORMULARIO - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - *@

                @*FORMULARIO - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - *@

            </div>

        </section>

    </article>

    <article class="col-12 col-lg-9"></article>

</aside>

<br />
@* Contenido *@
<main class="container-fluid mt-5">

    @* Titulo *@
    <section class="row border-R text-center rounded-3">
        <h1><span class="color-R">S</span>elecciona un equipo</h1>
    </section>

    @* Buscadores *@
    <article class="row mt-4  justify-content-between">

        @* Buscador por nombre *@
        <section class="col-12 col-md-3 col-lg-2 text-center border-R rounded-2">

            <h5 class="mt-2 mb-3"><span class="color-R">B</span>usqueda por nombre del equipo</h5>

            <div class="row text-center mb-2">

                <div class="col-7">
                    <input type="text" placeholder="Buscar" class="search">
                </div>

                <div class="col-5 d-flex align-items-center">
                    <input type="button" value="Buscar" class="boton">
                </div>

            </div>

        </section>

        @* Buscador por filtros *@
        <section class="col-12 col-md-7 text-center border-R rounded-2 align-items-center">

            <h4 class="mt-3 mb-3"><span class="color-R">B</span>usqueda con filtros</h4>

            <div class="row text-center d-flex justify-content-between mb-3">

                <div class="col-4 col-lg-2 col-md-4 p-1">
                    <select name="marcas" class="search">
                        <option value="opcion1">Marcas</option>
                        <option value="opcion2">Opcion2</option>
                        <option value="opcion13">Opcion3</option>
                    </select>
                </div>

                <div class="col-4 col-lg-2 col-md-4 p-1">
                    <select name="marcas" class="search">
                        <option value="opcion1">Tipos</option>
                        <option value="opcion2">Opcion2</option>
                        <option value="opcion13">Opcion3</option>
                    </select>
                </div>

                <div class="col-4 col-lg-2 col-md-4 p-1">
                    <select name="marcas" class="search">
                        <option value="opcion1">Ubicación</option>
                        <option value="opcion2">Opcion2</option>
                        <option value="opcion13">Opcion3</option>
                    </select>
                </div>

                <div class="col-4 col-lg-2 col-md-4 p-1">
                    <select name="marcas" class="search">
                        <option value="opcion1">Voltaje</option>
                        <option value="opcion2">Opcion2</option>
                        <option value="opcion13">Opcion3</option>
                    </select>
                </div>

                <div class="col-4 col-lg-2 col-md-4 p-1">
                    <input type="button" value="Buscar" class="boton">
                </div>

            </div>

        </section>

        @*Buscardor por estatus*@
        <section class="col-12 col-md-2 text-center border-R rounded-2">

            <h4 class="mt-2 mb-3"><span class="color-R">B</span>uscar por estatus</h4>

            <div class="row text-center mb-2">

                <div class="col-2 p-2"></div>

                <div class="col-8 p-2">

                    <select name="marcas" class="search" style="width:100%;">
                        <option value="opcion1">Todos</option>
                        <option value="opcion2">Opcion2</option>
                        <option value="opcion13">Opcion3</option>
                    </select>

                </div>

                <div class="col-2 p-2"></div>

            </div>

        </section>

    </article>

    @* Tabla de resultados *@
    <article class="row border-R rounded-3 text-dark mt-3 tabla-main">

        <table class="text-center mantenimiento">

            <thead>

                <tr class="border-R">

                    <th class="border-R" id="Nserie">
                        N°. Serie
                    </th>
                    <th class="border-R">
                        Marca
                    </th>
                    <th class="border-R">
                        Tipo
                    </th>
                    <th class="border-R">
                        Estatus
                    </th>
                    <th class="border-R" id="adqui">
                        Precio de adquisición
                    </th>
                    <th class="border-R" id="consultarMto">
                        Consultar Mto
                    </th>

                </tr>

            </thead>

            <tbody>

                <tr>
                    <td class="border-R">xxxxxxx</td>
                    <td class="border-R">xxxxxxx</td>
                    <td class="border-R">xxxxxxx</td>
                    <td class="border-R">xxxxxxx</td>
                    <td class="border-R">xxxxxxx</td>
                    <td class="border-R">
                        <input type="button" value="Seleccionar" class="boton">
                    </td>
                </tr>

            </tbody>

        </table>

    </article>

    @* Manteniminetos *@
    <article class="row mt-4 justify-content-between ">
       
        <section class="col-12 col-md-4 ">

            @* Contenedor 1 *@
            <aside class="row text-center border-R rounded-3">

                @* Numero de serie *@
                <div class="row">
                    
                    <div class="col-8 text-start">
                        <h3>Número de serie: </h3>
                    </div>
                    
                    <div class="col-4">
                        <h3><b class="color-R">xxxxx</b></h3>
                    </div>

                </div>
                
                @* Tipo de equipo *@
                <div class="row mt-2">
                
                    <div class="col-8 text-start">
                        <h3>Tipo de equipo: </h3>
                    </div>

                    <div class="col-4">
                        <h3><b class="color-R">xxxxx</b></h3>
                    </div>
               
                </div>

            </aside>

            @* Contenedor 2 *@
            <aside class="row text-center border-R rounded-3 mt-5">
               
                @* Marca *@
                <div class="row">

                    <div class="col-8 text-start">
                        <h3>Marca: </h3>
                    </div>
                   
                    <div class="col-4">
                        <h3><b class="color-R">xxxxx</b></h3>
                    </div>

                </div>
               
                @* Capacidad y voltaje *@
                <div class="row mt-2">

                    <div class="col-8 text-start">
                        <h3>Capacidad y voltaje: </h3>
                    </div>

                    <div class="col-4">
                        <h3><b class="color-R">xxxxx</b></h3>
                    </div>

                </div>
                
                @* Ubicacion *@
                <div class="row mt-2">

                    <div class="col-8 text-start">
                        <h3>Ubicación: </h3>
                    </div>

                    <div class="col-4">
                        <h3><b class="color-R">xxxxx</b></h3>
                    </div>

                </div>

                @* Estado del equipo *@
                <div class="row mt-2">

                    <div class="col-8 text-start">
                        <h3>Estado del equipo: </h3>
                    </div>

                    <div class="col-4">
                        <h3><b class="color-R">xxxxx</b></h3>
                    </div>

                </div>
               
                @* Costo de adquisicón *@
                <div class="row mt-2">

                    <div class="col-8 text-start">
                        <h3>Costo de adquisicón: </h3>
                    </div>

                    <div class="col-4">
                        <h3><b class="color-R">xxxxx</b></h3>
                    </div>

                </div>

                @* Periodo de mantenimineto *@
                <div class="row mt-2">

                    <div class="col-8 text-start">
                        <h3>Periodo de mantenimineto: </h3>
                    </div>

                    <div class="col-4">
                        <h3><b class="color-R">xxxxx</b></h3>
                    </div>

                </div>

                @* Estado de registro *@
                <div class="row mt-2">

                    <div class="col-8 text-start">
                        <h3>Estado de registro: </h3>
                    </div>

                    <div class="col-4">
                        <label class="toggle-switch mt-2">
                            <input type="checkbox">
                            <div class="toggle-switch-background">
                                <div class="toggle-switch-handle"></div>
                            </div>
                        </label>
                    </div>

                </div>
                
                @* Funcion *@
                <div class="row mt-2">

                    <div class="col-8 text-start">
                        <h3>Función: </h3>
                    </div>

                    <div class="col-4">
                        <h3><b class="color-R">xxxxx</b></h3>
                    </div>

                </div>
            
            </aside>

        </section>
        <section class="col-12 col-md-8">

           <aside style="width:95%;  margin-left:5%;">

                @*Titulo *@
                <aside class="row border-R text-center rounded-3">
                    <h1><span class="color-R">M</span>antenimineto del equipo</h1>
                </aside>

                <article class="row mt-4  justify-content-between">

                    @* Buscador por filtros *@
                    <section class="col-12 col-md-8 text-center border-R rounded-2 align-items-center">

                        <h4 class="mt-3 mb-3"><span class="color-R">B</span>usqueda con filtros</h4>

                        <div class="row text-center d-flex justify-content-between mb-3">

                            <div class="col-4 col-lg-3 col-md-4 p-1">
                                <select name="Proveedores" class="search">
                                    <option value="opcion1">Proveedores</option>
                                    <option value="opcion2">Opcion2</option>
                                    <option value="opcion13">Opcion3</option>
                                </select>
                            </div>

                            <div class="col-4 col-lg-3 col-md-4 p-1">
                                <select name="Fecha 1" class="search">
                                    <option value="opcion1">Fecha 1</option>
                                    <option value="opcion2">Opcion2</option>
                                    <option value="opcion13">Opcion3</option>
                                </select>
                            </div>

                            <div class="col-4 col-lg-3 col-md-4 p-1">
                                <select name="Fecha 2" class="search">
                                    <option value="opcion1">Fecha 2</option>
                                    <option value="opcion2">Opcion2</option>
                                    <option value="opcion13">Opcion3</option>
                                </select>
                            </div>

                            <div class="col-4 col-lg-3 col-md-4 p-1">
                                <input type="button" value="Buscar" class="boton">
                            </div>

                        </div>

                    </section>

                    @* Estado de aplicación*@
                    <section class="col-12 col-md-3 text-center border-R rounded-2">

                        <h4 class="mt-2 mb-3"><span class="color-R">E</span>stado de aplicación</h4>

                        <div class="row text-center mb-2">

                            <div class="col-2 p-2"></div>

                            <div class="col-8 p-2">

                                <select name="Aplica" class="search" style="width:100%;">
                                    <option value="opcion1">Aplica</option>
                                    <option value="opcion2">Opcion2</option>
                                    <option value="opcion13">Opcion3</option>
                                </select>

                            </div>

                            <div class="col-2 p-2"></div>

                        </div>

                    </section>


                </article>

                @* Tabla de mantenimientos *@
                <article class="row border-R rounded-3 text-dark mt-3 mb-5 tabla-main">

                    <table class="text-center mantenimiento">

                        <thead>

                            <tr class="border-R">

                                <th class="border-R">
                                    Costo Mto.
                                </th>
                                <th class="border-R">
                                    Costo Rep
                                </th>
                                <th class="border-R Proveedor">
                                    Proveedor
                                </th>
                                <th class="border-R">
                                    Aplicado
                                </th>
                                <th class="border-R">
                                    U.Aplic
                                </th>
                                <th class="border-R">
                                    P.Aplicado
                                </th>
                                <th class="border-R">
                                    Consultar
                                </th>

                            </tr>

                        </thead>

                        <tbody>

                            <tr>

                                <td class="border-R">xxxxxxx</td>
                                <td class="border-R">xxxxxxx</td>
                                <td class="border-R">xxxxxxx</td>
                                <td class="border-R">xxxxxxx</td>
                                <td class="border-R">xxxxxxx</td>
                                <td class="border-R">xxxxxxx</td>
                                <td class="border-R">
                                    <input type="button" value="Seleccionar" class="boton">
                                </td>

                            </tr>

                        </tbody>

                    </table>

                </article>

                <br />
                @* Totales *@
                <aside class="row rounded-3 text-dark mt-3 mb-5 justify-content-between tabla-main">

                    <div class="col-6 col-md-2 border-R">
                        <h3><span class="color-R">$</span> xxxx.xx</h3>
                    </div>

                    <div class="col-6 col-md-2 border-R">
                        <h3><span class="color-R">$</span> xxxx.xx</h3>
                    </div>

                    <div class="col-12 col-md-2"></div>

                    <div class="col-12 col-md-6 border-R text-center">
                        <h2><span class="color-R">T</span>otal de gastos</h2>
                    </div>

                </aside>

                <br />


           </aside>

        
        </section>

    </article>


</main>

@* Despegable 2 *@
<aside class="row position-fixed fixed-bottom" style="padding-right:1%;">

    <article class="col-12 col-lg-9 "></article>

    <article class="col-12 col-lg-3 border border-dark bg-R rounded-3" id="form-b">

        <section class="row text-light text-center justify-content-center" id="fBody">

            <h4 class="pt-3">Registra un mantenimieneto</h4>

        </section>

        <div class="row text-center " style="background: #fff;">

            <h3 class="pt-2 pb-1 ">

                <span class="color-R">R</span>egistrar mantenimineto <img src="~/images/up.svg" alt="up"
                                                                          class="down" id="up1">
                <img src="~/images/down.svg" class="down d-none" alt="down" id="down1">

            </h3>

        </div>

    </article>

</aside>







