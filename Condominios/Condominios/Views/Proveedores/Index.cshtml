@model Condominios.Models.ViewModels.CtrolProveedores.ProveedoresViewModel

<aside class="row">

    <article class="col-12 col-lg-3  border-R rounded-3 text-dark" id="form">

        <section class="row text-center text-dark" style="background: #fff;">

            <h3 class="p-1 ">
                <span class="color-R">P</span>roveedor <img src="~/images/down.svg"
                                                                alt="down" class="down" id="down">
                <img src="~/images/up.svg" class="down d-none" alt="up" id="up">
            </h3>

            <form asp-action="Agregar" class="text-light text-center" id="form-body" onsubmit="return ValidarFormulario()">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="ID" value="">

                <h4 class="pt-3">Registra un proveedor</h4>

                @*Nombre*@
                <div class="row pt-1">
                    <h5>Nombre</h5>
                </div>
                <div class="row d-flex justify-content-center pt-1">
                    <input asp-for="Nombre" type="text" class="txtForm" onchange="ValidarFormulario()">
                    <span id="NombreError" class="text-danger" style="display: none;"></span>
                </div>

                @*Teléfono*@
                <div class="row pt-1">
                    <h5>Teléfono</h5>
                </div>
                <div class="row d-flex justify-content-center pt-1">
                    <input asp-for="Numero" type="text" class="txtForm" onchange="ValidarFormulario()">
                    <span id="NumeroError" class="text-danger" style="display: none;"></span>
                </div>

                @*Dirección*@
                <div class="row pt-1">
                    <h5>Dirección</h5>
                </div>
                <div class="row d-flex justify-content-center pt-1">
                    <input asp-for="Direccion" type="text" class="txtForm" onchange="ValidarFormulario()">
                    <span id="DireccionError" class="text-danger" style="display: none;"></span>
                </div>

                @*Correo*@
                <div class="row pt-1">
                    <h5>Correo</h5>
                </div>
                <div class="row d-flex justify-content-center pt-1">
                    <input asp-for="Correo" type="text" class="txtForm" onchange="ValidarFormulario()">
                    <span id="CorreoError" class="text-danger" style="display: none;"></span>
                </div>

                @*Boton*@
                <div class="row pt-3 mb-2 d-flex justify-content-center">
                    <input type="submit" value="Agregar" class="boton" style="width:80%; margin:auto;" formnovalidate>
                </div>

                <br>
             
                <br />
                @*FORMULARIO - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - *@
            </form>
        </section>
    </article>

    <article class="col-12 col-lg-9"></article>

</aside>

<br />


<main class="container-fluid mt-5">
    @* Titulo *@
    <article class="row border-R text-center rounded-3">
        <h1><span class="color-R">P</span>roveedor</h1>
    </article>

    @* Tabla2 *@
    <article class="row border-R rounded-3 text-dark mt-3 mb-3 tabla-main">

        <table class="text-center">

            <thead>

                <tr class="border-R">
                    <th class="border-R" id="nombre">
                        Nombre
                    </th>
                    <th class="border-R">
                        Teléfono
                    </th>
                    <th class="border-R" id="direccion">
                        Dirección
                    </th>
                    <th class="border-R" id="correo">
                        Correo
                    </th>
                    <th class="border-R" id="estado">
                        Estado
                    </th>
                    <th class="border-R" id="detalles">
                        Editar
                    </th>
                </tr>

            </thead>

            <tbody>
                @for (int i = 0; i < Model.Proveedor.Count; i++)
                {
                    <form asp-action="UpdateEstado" id="Update@(i)">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <tr>
                        <td class="border-R">@Model.Proveedor[i].Nombre</td>
                        <td class="border-R">@Model.Proveedor[i].Telefono</td>
                        <td class="border-R">@Model.Proveedor[i].Direccion</td>
                        <td class="border-R">@Model.Proveedor[i].Correo</td>
                        <td class="border-R">
                            <label class="toggle-switch">
                                <input class="chbxEstado" data-url="Proveedores/UpdateStatus/" type="checkbox" checked="@Model.Proveedor[i].Estado" value="@(Model.Proveedor[i].ID)">
                                <div class="toggle-switch-background">
                                    <div class="toggle-switch-handle"></div>
                                </div>
                            </label>
                        </td>
                        <td class="border-R">
                            <img class="remover" src="~/images/pen-to-square-solid.svg" data-parametro="@(Model.Proveedor[i].ID)" />
                        </td>
                    </tr>
                    </form>
                }
            </tbody>

        </table>

    </article>
</main>

