</article>

@* Tabla*@
<article class="row rounded-3 text-dark mt-3">

    <table class="text-center border border-primary manteniminetos" id="myTable">
        <thead>

            <tr class="border-R">
                <th class="border-R">
                    Tipo
                </th>
                <th class="border-R">
                    Cantidad
                </th>
                <th class="border-R">
                    Costo total de mantenimineto
                </th>
                <th class="border-R">
                    Costo total de reparaciones
                </th>
                <th class="border-R">
                    Costo total de adquisición
                </th>
            </tr>

        </thead>

        <tbody>

            @for (int i = 0; i<Model.Conteo.Count; i++)
            {
                <tr>
                    <td class="border-R">@Model.Conteo[i].Variante</td>
                    <td class="border-R">@Model.Conteo[i].Cantidad</td>
                    <td class="border-R">@Model.Conteo[i].CostoM</td>
                    <td class="border-R">@Model.Conteo[i].CostoR</td>
                    <td class="border-R">@Model.Conteo[i].CostoAd</td>

                </tr>
            }
        </tbody>

    </table>

    <section class="row text-center">
        <div class="pt-2">
            <h5><span class="color-R">M</span>ás resultados</h5>
        </div>
        <div class="pagination d-flex justify-content-center">
        </div>
    </section>
</article>

<article class="row d-flex justify-content-cemter  mt-3">
    <section class="col-3 col-md-6  numerPage1 border-R d-flex align-items-center justify-content-center" style="width:31.5%;">
            <h2><span class="color-R">T</span>otal de gastos</h2>
        
    </section>
    <section class="col-2 space"></section>
    <section class="col-3 col-md-2 border-R d-flex align-items-center justify-content-center">
        <h3><span class="color-R">$</span></h3>
    </section>
    <section class="col-3 col-md-2 border-R d-flex align-items-center justify-content-center">
        <h3><span class="color-R">$ 223256</span></h3>
    </section>
    <section class="col-3 col-md-2 numerPage border-R d-flex align-items-center justify-content-center">
        <h3><span class="color-R">$</span></h3>
    </section>
</article>

@section Scripts {
    @{
        <script src="~/js/Desplegable.js"></script>
        <script src="~/js/Tablas.js"></script>
        
    }
}