@using Microsoft.AspNetCore.Identity;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Condominios</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tablas.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Desplegable.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/catalogos.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tipo.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Condominios.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <main role="main" class="container-fluid">

        <article class="row">

            @*Menu*@
            <section class="flex-column" id="col-menu">

                @*Icono de hamburgesa*@
                <div class="pt-3 justify-content-end " style="width:100%;">
                    <div class="hamburger " id="hamburger">
                        <img src="~/images/bars-solid.svg" id="menu" class="menu" />
                    </div>
                </div>

                @*Body menu*@

                <div class="row pt-3 menuLogo" id="menuLogo">
                    <img src="~/images/Logo.svg" width="100%">
                </div>

                @*Catalogos*@
                <div class="row pt-4 d-flex align-items-center flex-row justify-content-center">
                    <a asp-controller="Home" asp-action="Catalogos" class="hyperLink">
                        <img src="~/images/Book-solid.svg" class="icon-menu" />
                        <h6><b class="titles">Catálogos</b></h6>
                    </a>
                </div>

                @*Proveedores*@
                <div class="row pt-4 d-flex align-items-center flex-row justify-content-center">
                    <a asp-controller="Home" asp-action="Proveedores" class="hyperLink">
                        <img src="~/images/briefcase-solid.svg" class="icon-menu" />
                        <h6><b class="titles">Proveedores</b></h6>
                    </a>
                </div>


                @*Datos generales de equipos*@
                <div class="row pt-4 d-flex align-items-center flex-row justify-content-center">
                    <a asp-controller="Home" asp-action="TipoEquipos" class="hyperLink">
                        <img class="icon-menu" src="~/images/DatosGeneralesDeEquipos.svg" />
                        <h6><b class="titles">Datos generales de los equipos</b></h6>
                    </a>
                </div>

                @*Datos Especificos del equipo*@
                <div class="row pt-4 d-flex align-items-center flex-row justify-content-center">
                    <a asp-controller="Home" asp-action="Equipos" class="hyperLink">
                        <img class="icon-menu" src="~/images/engine.svg" />
                        <h6><b class="titles">Datos específicos del equipos</b></h6>
                    </a>
                </div>

                @*Gastos de mantenimiento*@
                <div class="row pt-4 d-flex align-items-center flex-row justify-content-center">
                    <a asp-controller="Home" asp-action="GastosDeMantenimiento" class="hyperLink">
                        <img class="icon-menu" src="~/images/circle-dollar-to-slot-solid.svg" />
                        <h6><b class="titles">Gastos de mantenimiento</b></h6>
                    </a>
                </div>

                @*Mantenimiento*@
                <div class="row pt-4 d-flex align-items-center flex-row justify-content-center">
                    <a asp-controller="Home" asp-action="Mantenimientos" class="hyperLink">
                        <img class="icon-menu" src="~/images/tools.svg" />
                        <h6><b class="titles">Mantenimiento</b></h6>
                    </a>
                </div>
                @*Salir*@
                <div class="row pt-4 d-flex align-items-center flex-row justify-content-center">
                    <a asp-controller="Acceso" asp-action="Logout" class="hyperLink">
                        <img class="icon-menu" src="~/images/right-from-bracket-solid.svg" />
                        <h6><b class="titles color-R">Salir</b></h6>
                    </a>
                </div>

            </section>

            @*Overlay*@

            <section class="overlay" id="overlay"></section>

            @*Content*@

            <section id="content">

                @*Header*@
                <header class="row">

                    <nav class="navbar navbar-expand-lg navbar-light bg-light">

                        <div class="container-fluid ">

                            <div class="col-lg-2 col-6">
                                <a class="navbar-brand" href="#">
                                    <img src="~/images/Logo.svg" width="100%">
                                </a>
                            </div>

                            <div class="col-6 text-end">
                                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsivo" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                            </div>

                        </div>
                    </nav>

                    <div class="collapse" id="navbarResponsivo">

                        <div class="p-4">
                            @*Catálogos*@
                            <div class="mt-3 t-none justify-content-start d-flex">
                                <a asp-controller="Home" asp-action="Catalogos" class="t-none d-flex align-items-center link">
                                    <img class="icons" src="~/images/Book-solid.svg" />
                                    <b> Catálogos</b>
                                </a>
                            </div>

                            @*Proveedores*@
                            <div class="mt-3 t-none justify-content-start d-flex">
                                <a asp-controller="Home" asp-action="Proveedores" class="t-none d-flex align-items-center link">
                                    <img class="icons" src="~/images/users.svg" />
                                    <b>Proveedores</b>
                                </a>
                            </div>

                            @*Datos generales de equipos*@
                            <div class="mt-3 t-none justify-content-start d-flex">
                                <a asp-controller="Home" asp-action="TipoEquipos" class="t-none d-flex align-items-center link">
                                    <img class="icons" src="~/images/DatosGeneralesDeEquipos.svg" />
                                    <b>Datos generales de equipos</b>
                                </a>
                            </div>

                            @*Datos específicos de equipo*@
                            <div class="mt-3 t-none justify-content-star d-flex">
                                <a asp-controller="Home" asp-action="Equipos" class="t-none d-flex align-items-center link">
                                    <img class="icons" src="~/images/engine.svg" />
                                    <b>Datos específicos del equipo</b>
                                </a>
                            </div>

                            @*Gastos de mantenimiento*@
                            <div class="mt-3 t-none justify-content-start d-flex">
                                <a asp-controller="Home" asp-action="GastosDeMantenimiento" class="t-none d-flex align-items-center link">
                                    <img class="icons" src="~/images/circle-dollar-to-slot-solid.svg" />
                                    <b>Gastos de mantenimiento</b>
                                </a>
                            </div>

                            @*Mantenimiento*@
                            <div class="mt-3 t-none justify-content-start d-flex">
                                <a asp-controller="Home" asp-action="Mantenimientos" class="t-none d-flex align-items-center link">
                                    <img class="icons" src="~/images/tools.svg" />
                                    <b>Mantenimiento</b>
                                </a>
                            </div>

                            @*Salir*@
                            <div class="mt-3 t-none justify-content-center d-flex">
                                <a asp-controller="Acceso" asp-action="Logout" class="t-none d-flex align-items-center link">
                                    <img class="icons" src="~/images/right-from-bracket-solid.svg" />
                                    <h6><b class="color-R">Salir</b></h6>
                                </a>
                            </div>

                        </div>
                    </div>
                </header>

                @*Editable*@
                <article class="container-fluid" id="render">
                    @RenderBody()
                </article>

            </section>

        </article>
    </main>

    <script src="~/js/ApiClient.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
