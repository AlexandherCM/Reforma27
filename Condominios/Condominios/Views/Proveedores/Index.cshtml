@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/ProveedorScripts/ValidarProveedor.js"></script>
        <script src="~/js/ProveedorScripts/Editar.js"></script>
        <script src="~/js/TipoEquiposScripts/EstadoCheckbox.js"></script>
        <script src="~/js/despegable.js"></script>
    }
}